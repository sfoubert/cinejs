extends layout

block content

	p
	.jumbotron
		h1= title
		p CinemaJS est une application permettant d'enregistrer vos entrées au cinéma, de générer vos statistiques, et partager vos goûts de cinéphile.
		if(user == null)
			div(align="center")
				a(href="/auth/facebook", role="button")
					img(src="/images/login-with-facebook.png")

	div(ng-controller='IndexController')
		p Les dernières recommandations
		ul
		li(ng-repeat='movie in movies' ng-hide='movie.user == null') 
			img(ng-src="{{movie.user.photo}}")
			{{movie.user.firstname}} {{movie.user.name}} recommande {{movie.title}} à {{movie.score | percentFilter}}
