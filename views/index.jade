extends layout

block content
	h1= title
	p Welcome to #{title}

	span.badge.badge-inverse 86
	span  films

	table.table
		tr
			th Titre
			th Date
			th Imdb
		tr.success
			td Jack Reacher
			td 01-01-2013
			td
				a(href='#myModal', role='button', class='btn', data-toggle='modal') Imdb

	div.pagination.pagination-centered
		ul
			li
				a(href='#') Prev
			li
				a(href='#') 1
			li
				a(href='#') 2
			li
				a(href='#') 3
			li
				a(href='#') 4
			li
				a(href='#') 5
			li
				a(href='#') Next


	// Modal
	div#myModal.modal.hide.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
		div.modal-header
			button.close(type='button', data-dismiss='modal', aria-hidden='true') Ã—
			h3#myModalLabel Modal header
		div.modal-body
			p My movie details from IMDB
			img#my_image(src='http://www.ucpa-vacances.com/xflow/kukini-ucpa/docroot/ucpa/images/logo-ucpa.gif')
		div.modal-footer
			button.btn(data-dismiss='modal', aria-hidden='true') Close

	script.
		$(document).ready(function() {
			$('#myModal').on('shown', function () {

				$.getJSON('http://mymovieapi.com/?title=Jack Reacher&type=json&plot=simple&episode=1&limit=1&yg=0&mt=none&lang=en-US&offset=&aka=simple&release=simple&business=0&tech=0', function(data) {
					console.log(data);
					$("#my_image").attr("src",data[0].poster);
				});

				
			})
		});