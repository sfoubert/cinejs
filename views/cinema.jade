extends layout

block content
	h1= title
	p Welcome to #{title}

	span.badge.badge-inverse #{count}
	span  films

	div.btn-group
		a(href='/cinema/add')
			button.btn.btn-primary Ajouter

	table.table
		tr
			th Titre
			th Date
		each movie in movies
			tr.success
				td #{movie.movie}
				td #{moment(movie.viewdate).format("DD-MMM-YYYY")}

	div.pagination.pagination-centered
		ul
			li
				a(href='#') Prev
			li
				a(href='#') 1
			li
				a(href='#') 2
			li
				a(href='#') 3
			li
				a(href='#') 4
			li
				a(href='#') 5
			li
				a(href='#') Next
