extends layout
	
block content
	h1= title

	div(ng-controller='UserController' ng-init="initUser('#{userDetailled._id}')")

		div.container
			div.row
				div.col-md-12
					ul.media-list
						li.media
							a.pull-left(href="/user/view/{{entry.userDetailled._id}}")
								img(ng-src="#{userDetailled.photo}")
							a(href="/user/view/#{userDetailled._id}")
								h4 #{userDetailled.displayName}
							p Dernière connexion : #{moment(userDetailled.lastLogin).format("DD-MM-YYYY HH:mm:ss")}
			div.row
				div.col-md-6
					div.panel.panel-default
						div.panel-heading
							h3.panel-title Les {{recommandations.length}} dernières recommandations
						div.panel-body
							ul.media-list
								li.media(ng-repeat='entry in recommandations')
									a.pull-left(href="/user/view/{{entry.userDetailled._id}}")
										img(ng-src="{{entry.userDetailled.photo}}")
									a(href="/user/view/{{entry.userDetailled._id}}")
										h4 {{entry.userDetailled.firstname}} {{entry.userDetailled.name}}
									span &nbsp;recommande {{entry.movie.title}} 
									span &nbsp;à {{entry.score | percentFilter}}
				div.col-md-6
					div.panel.panel-default
						div.panel-heading
							h3.panel-title Les {{entries.length}} derniers films vus
						div.panel-body
							ul.media-list
								li.media(ng-repeat='entry in entries')
									a.pull-left(href="/user/view/{{entry.userDetailled._id}}")
										img(ng-src="{{entry.userDetailled.photo}}")
									a(href="/user/view/{{entry.userDetailled._id}}")
										h4 {{entry.userDetailled.firstname}} {{entry.userDetailled.name}}
									span &nbsp;le {{entry.viewdate | dateFilter}}
									span &nbsp;a vu {{entry.movie.title}} 
