doctype html
html(lang='fr', ng-app='cineApp')
	head
		title= title
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		meta(name='description', content='')
		meta(name='author', content='')
		link(rel='stylesheet', href='/bootstrap/css/bootstrap.css')
		link(rel='stylesheet', href='/bootstrap/css/bootstrap-theme.css')
		link(rel='stylesheet', href='/bootstrap/css/bootstrap-glyphicons.css')
		link(rel='stylesheet', href='/datepicker/css/datepicker.css')
		link(rel='stylesheet', href='/stylesheets/style.css')

		script(src='/javascripts/jquery-1.9.1.min.js')
		script(src='/javascripts/angular.min.js')
		script(src='/javascripts/ng-infinite-scroll.min.js')
		script(src='/javascripts/Chart.js')
		script(src='/bootstrap/js/bootstrap.js')
		script(src='/datepicker/js/bootstrap-datepicker.js')
		script(src='/javascripts/ng-cineApp.js')

	body
		a(href='https://github.com/sfoubert')
			img(style='position: fixed; top: 40px; right: 0; border: 0;', src='https://s3.amazonaws.com/github/ribbons/forkme_right_red_aa0000.png', alt='Fork me on GitHub')

		div.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
			div.container
				div.navbar-header
					button.navbar-toggle(type='button', data-target='.navbar-collapse',data-toggle='collapse')
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href='/cinema') #{title}
				div.collapse.navbar-collapse
					ul.nav.navbar-nav
						li.active
							a(href='/cinema') Liste
						li
							a(href='/cinema/viewAdd') Ajouter un film
					ul.nav.navbar-nav.pull-right
						li.divider-vertical
						li.dropdown
							a(href='#',data-toggle='dropdown').dropdown-toggle Graphiques
								strong.caret
							ul.dropdown-menu
								li
									a(href='/chart/show?view=year') Par an
								li.divider
								li
									a(href='/chart/show?view=month') Par mois
		block content